{% extends "base_backoffice.html.twig" %}

{% block body %}

    {% for label, messages in app.flashes(['success', 'danger']) %}
        {% for message in messages %}
            <div class="col-6 mx-auto text-center alert alert-{{ label }} my-5">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <h2 class="text-center my-3">Liste des formats</h2>
    <div>
        <table class="table text-center align-middle" style="overflow-x : scroll;" id="table-backoffice-format">
            <thead>
                <tr>
                    {% for data in colonnes %}
                        {% if (data != 'id')%}
                            <th>{{data}}</th>                    
                        {% endif %}

                    {% endfor %}
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for format in formats %}
                    <tr>
                        <td>{{format.format}}</td>
                        <td>{{format.prix}} â‚¬</td>
                        <td>{{format.hauteur}}</td>
                        <td>{{format.largeur}}</td>
                        <td><a href="{{ path('modify_format', {'id' : format.id}) }}" class="btn bg-primary text-white"><i class="bi bi-pencil-square"></i></a> <a class="btn bg-danger text-white" href="{{ path('remove_format', {'id' : format.id}) }}"><i class="bi bi-trash"></i></a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}