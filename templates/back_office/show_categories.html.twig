{% extends "base_backoffice.html.twig" %}

{% block body %}

    {% for label, messages in app.flashes(['success', 'danger']) %}
        {% for message in messages %}
            <div class="col-6 mx-auto text-center alert alert-{{ label }} my-5">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <h2 class="text-center my-3">Liste des categories</h2>

    <table class="table table-striped vertical-border" id="table-backoffice-category">
        <thead>
            <tr>
                {% for data in colonnes %}
                    {% if data != 'id' %}
                        <th class="text-center">{{data|capitalize}}</th>            
                    {% endif %}
                {% endfor %}
                <th class="text-center">Action</th>
            </tr>
        </thead>
        <tbody>
            {% for categorie in categories %}
                <tr>
                    <td class="align-middle text-center">{{ categorie.titre}}</td>
                    <td class="text-center"><a href="{{ path('modify_categorie', {'id' : categorie.id }) }}" class="btn bg-primary text-white me-2"><i class="bi bi-pencil-square"></i></a><a class="btn bg-danger text-white" href="{{ path('remove_categorie', {'id' : categorie.id }) }}"><i class="bi bi-trash"></i></a></td>
                </tr> 
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
