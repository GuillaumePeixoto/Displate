{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1 class="text-center fw-bold mt-5 titreinscription text-white">Créer votre compte</h1>

        {{ form_start(registrationForm, {'attr': {'class': 'col-lg-7 col-md-8 col-10 mx-auto text-white mb-5'}} ) }}

         <div class="switch-button mx-auto my-3">
            <input class="switch-button-checkbox" id="chooseRole" type="checkbox"></input>
            <label class="switch-button-label" for=""><span class="switch-button-label-span">Client</span></label>
        </div>

        <div id="artisteInputs" style="display: none">

            <div class="col-12" id="add_photo_profil">
                {{ form_row(registrationForm.imageProfil) }}   
            </div>
            <div class="d-flex flex-wrap">
                <div class="col-md-6 col-10 mx-auto my-3 text-center p-2 " id="block-profil-preview">
                    <h4 class="text-center"> Prévisualisation :</h4>
                    <img id="profil-preview" class="col-lg-6 col-md-8 col-10 rounded-circle">
                </div>
            </div>

            <div class="col-12" id="add_photo_banniere">
                {{ form_row(registrationForm.banniereProfil) }}   
            </div>
            <div class="d-flex flex-wrap">
                <div class="col-12 mx-auto my-3 text-center p-2 " id="block-banniere-preview">
                    <h4 class="text-center"> Prévisualisation :</h4>
                    <img id="banniere-preview" class="col-lg-12">
                </div>
            </div>

            {{ form_row(registrationForm.description) }}


        </div>

        <div class="d-none">
            {{ form_row(registrationForm.roles) }}
        </div>

        {{ form_row(registrationForm.prenom) }}

        {{ form_row(registrationForm.nom) }}

        {{ form_row(registrationForm.pseudo ) }}

        {{ form_row(registrationForm.email) }}

        <div class="col-12 flex-wrap d-flex justify-content-between">
        <div class="col-lg-5 col-12">
        {{ form_row(registrationForm.adresse) }}
        </div>
        <div class="col-lg-4 col-12">
        {{ form_row(registrationForm.ville) }}
        </div>
        <div class="col-lg-2 col-12">
        {{ form_row(registrationForm.codePostal) }}
        </div>
        </div>

        {{ form_row(registrationForm.password) }}
        
      
        <div class="text-center" >
            <button type="submit" class="btn col-12 btn-dark mb-3">Valider</button>
        </div>

    {{ form_end(registrationForm) }}
{% endblock %}
 