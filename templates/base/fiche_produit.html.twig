{% extends "base.html.twig" %}

{% block title %}
    Boots Arts fiche produit
{% endblock %}




{% block body %}

<div class="container my-5">
    <div class="row">
        <div class="col-12 col-lg-6">
            <div class="card bg-light mb-3 bgProduct">
                <div class="card-body text-center growID">
                        <img class="img-fluid w-25 mt-5 shadow p-3 mb-5 bg-body rounded imgProduct" src="{{ asset("uploads/photos/" ~ produit.photo)}}"/>  
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-6 add_to_cart_block">
            <div class="card bg-light mb-3">
                <div class="card-body">                  
                    <p class="price">{{produit.titre}}</p>
                    <form method="get" action="cart.html">
                        <div class="form-group">
                            <label for="colors">Choisir votre format</label>
                            <select class="form-select form-select mb-3 selectFormat" id="colors">
                                <option selected value="m">M</option>
                                <option value="l">L</option>
                                <option value="Xl">XL</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Quantité :</label>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <button type="button" class="quantity-left-minus btn btn-danger btn-number me-1"  data-type="minus" data-field="">
                                        <i class="fa fa-minus"></i>
                                    </button>
                                </div>
                                <input type="text" class="form-control"  id="quantity" name="quantity" min="1" max="10" value="1">
                                <div class="input-group-append">
                                    <button type="button" class="quantity-right-plus btn btn-success btn-number ms-1" data-type="plus" data-field="">
                                        <i class="fa fa-plus"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="text-center ">
                            <a href="cart.html" class="btn btn-success btn-lg text-uppercase">
                                <i class="fa fa-shopping-cart"></i> Ajouter au panier
                            </a>
                        </div>
                    </form>
                    <div class="product_rassurance">
                        <ul class="list-inline">
                            <li class="list-inline-item"><i class="fa fa-truck fa-2x"></i><br/>Livraison rapide</li>
                            <li class="list-inline-item"><i class="fa fa-credit-card fa-2x"></i><br/>paiement sécurisé</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>  
    </div>
{% endblock %}