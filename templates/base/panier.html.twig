{% extends "base.html.twig" %}

{% block title %}
    Panier Boots Arts
{% endblock %}

{% block body %}
<div class="bodypanier">
    {{ dump(panier) }}
    {% set panier_length = panier.id_produit|length %}
    {% if panier_length > 0 %}
    

        {% for  key1 ,tab in panier %}
            {{ dump(key1) }}
            {{ dump(tab) }}

            {% for key, data in tab %}
                {{ dump(key) }}
                {{ dump(data) }}
            {% endfor %}
            <div class="col-12 col-lg-8 col-xl-8 mx-auto d-flex justify-content-center shadow-sm px-0 mt-5">

                <div class="col-md-2 bgpanier p-2">

                    <a href="fiche_produit.html.twig"><img src="https://pbs.twimg.com/profile_images/1228975690646794240/o5kCDcPA_400x400.jpg" style="height:180px; width:200px;" alt=""></a>

                </div>

                <div class="col-md-6 bgpanier d-flex flex-column justify-content-center p-2">
                    <h4><a href="fiche_produit.html.twig" class="text-dark text-decoration-none">Tableau Itachi</a></h4>
                    <p>Quantité : 1</p>
                    <p class="mb-0"><a href="#" class="alert-link text-dark text-decoration-none">Supprimer</a></p>
                </div>

                <div class=" col-md-4 bgpanier d-flex justify-content-end align-items-center p-2">
                    <p class="fw-bold mb-0">25€</p>
                </div>

            </div>
        {% endfor %}

        <div class="container col-12 col-sm-12 col-md-12 col-lg-8 col-xl-8 d-flex justify-content-end align-items-center shadow-sm px-0 py-3 bgpanier mt-2 mb-3">
            <h5 class="m-0 px-2 fw-bold">Sous total (1 article): 25€</h5>
        </div>
    {% else %}

    <h3 class="text-center">Votre panier est vide.</h3>

    {% endif %}
    

    <div class="container col-12 col-sm-12 col-md-12 col-lg-8 col-xl-8 d-flex justify-content-between">

        <div>
            <p><a href="#" class="text-dark">Poursuivre mes achats</a></p>
        </div>

        <div>
            <a href="#" class="btn btn-dark">Valider ma commande</a>
        </div>
    </div>
    
</div>
{% endblock %}
