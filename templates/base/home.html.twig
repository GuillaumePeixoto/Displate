{% extends "base.html.twig" %}

{% block title %}
    Boots Art | Home
{% endblock %}

{% block body %}
<div class="mb-5">
    <div id="CarouselHome" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="{{ asset("img/caroussel-1.png") }}" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="{{ asset("img/caroussel-2.png") }}" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="{{ asset("img/caroussel-3.png") }}" class="d-block w-100" alt="...">
            </div>
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#CarouselHome" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>

        <button class="carousel-control-next" type="button" data-bs-target="#CarouselHome" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
    </div>

    <div class="mx-auto col-10 mt-5">
        <h2 class="text-center me-5 my-3 titrehome">Nouveaut√©s</h2>
        <div id="newProdSlide" class="splide">
            <div class="splide__track">
                <ul class="splide__list w-100">
                    {% for produit in derniers_produit %}
                        <li class="splide__slide mx-1 d-flex align-items-center">
                            <a href=" {{path("fiche_produit", {'id' : produit.id})}} ">
                                <img src="{{ asset("uploads/photos/" ~ produit.photo)}}" style="width: 250px" alt="{{ produit.photo }}">
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>

    <div class="mx-auto col-10 mt-5">
        <h2 class="text-center me-5 my-3 titrehome">Bestsellers</h2>
        <div id="bestSellProdSlide" class="splide">
            <div class="splide__track">
                <ul class="splide__list w-100">
                    {% for produit in best_sellers %}
                        <li class="splide__slide mx-1 d-flex align-items-center">
                            <a href=" {{path("fiche_produit", {'id' : produit.id})}} ">
                                <img src="{{ asset("uploads/photos/" ~ produit.photo)}}" class="" style="width: 250px" alt="{{ produit.photo }}">
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>

    <div class="mx-auto col-10 mt-5">
        <h2 class="text-center me-5 my-3 titrehome">Quelques Produits</h2>
        <div id="randomProdSlide" class="splide">
            <div class="splide__track">
                <ul class="splide__list w-100">
                    {% for produit in random_produit %}
                        <li class="splide__slide mx-1 d-flex align-items-center">
                            <a href=" {{path("fiche_produit", {'id' : produit.id})}} ">
                                <img src="{{ asset("uploads/photos/" ~ produit.photo)}}" class="" style="width: 250px" alt="{{ produit.photo }}">
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</div>
{% endblock %}